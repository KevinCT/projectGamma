<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Queue"
            android:id="@+id/viewButton"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Guest"
            android:id="@+id/cancelButton"
            android:layout_alignTop="@+id/viewButton"
            android:layout_toRightOf="@+id/viewButton"
            android:layout_toEndOf="@+id/viewButton"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current Guest:"
            android:id="@+id/currentGuestView"
            android:layout_marginTop="55dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/cancelButton"
            android:layout_toStartOf="@+id/cancelButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Order Details:"
            android:id="@+id/detailsView"
            android:layout_below="@+id/currentGuestView"
            android:layout_alignLeft="@+id/currentGuestView"
            android:layout_alignStart="@+id/currentGuestView"
            android:layout_marginTop="47dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Push Queue"
            android:id="@+id/pushButton"
            android:layout_above="@+id/viewButton"
            android:layout_alignLeft="@+id/viewButton"
            android:layout_alignStart="@+id/viewButton" />
    </RelativeLayout>
</LinearLayout>