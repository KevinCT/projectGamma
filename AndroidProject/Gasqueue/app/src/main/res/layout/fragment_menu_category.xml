<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pekl.gasqueue.com.gasqueue.Activitiy.CategoryActivity">

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="BEER"
            android:id="@+id/beerBtn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="COCKTAIL"
            android:id="@+id/drinksBtn"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="Cider"
            android:id="@+id/ciderBtn"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_below="@+id/beerBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="Shot"
            android:id="@+id/shotBtn"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_below="@+id/drinksBtn"
            android:layout_alignLeft="@+id/drinksBtn"
            android:layout_alignStart="@+id/drinksBtn" />

        <Button
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="NON ALCOHOLIC"
            android:id="@+id/alkfriaBtn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_below="@+id/ciderBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:textColor="#ffffff"
            android:background="#F44336"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:text="FOOD"
            android:id="@+id/matBtn"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_below="@+id/shotBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:background="#F44336"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create Menu/bar"
            android:id="@+id/createBarBtn"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/matBtn"
            android:layout_alignEnd="@+id/matBtn" />

        <Button

            android:layout_marginBottom="10dp"
            android:background="#F44336"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:id="@+id/cartBtn"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_above="@+id/createBarBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/createBarBtn"
            android:layout_alignEnd="@+id/createBarBtn" />

</RelativeLayout>
